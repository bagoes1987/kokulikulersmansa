                </div>
                <div class="bg-white/10 p-3 rounded-full">
                    <span class="material-symbols-outlined text-3xl">school</span>
                </div>
            </div>
            <div class="absolute -bottom-6 -right-6 size-24 bg-primary/20 rounded-full blur-2xl"></div>
        </div>

        <section class="space-y-4">
            <div class="flex items-center justify-between">
                <h2 class="text-lg font-bold text-slate-800">Informasi Jabatan</h2>
                <button onclick="loadCoordinatorData()"
                    class="text-primary text-xs font-semibold hover:bg-primary/5 px-2 py-1 rounded-lg">Refresh</button>
            </div>
            <div class="bg-white rounded-2xl p-4 shadow-sm border border-slate-100 space-y-5">
                <div class="flex items-start gap-4">
                    <div class="size-10 bg-slate-50 rounded-xl flex items-center justify-center text-slate-400">
                        <span class="material-symbols-outlined text-2xl">id_card</span>
                    </div>
                    <div class="flex-1">
                        <p class="text-[11px] text-slate-400 font-bold uppercase tracking-wider">NIP</p>
                        <p class="text-sm font-bold text-slate-800" id="coordNip">Memuat...</p>
                    </div>
                </div>
                <div class="h-px bg-slate-100"></div>
                <div class="flex items-start gap-4">
                    <div class="size-10 bg-slate-50 rounded-xl flex items-center justify-center text-slate-400">
                        <span class="material-symbols-outlined text-2xl">menu_book</span>
