                <span class="material-symbols-outlined">home</span>
                <span class="text-[10px] font-medium">Beranda</span>
            </button>
            <button onclick="window.location.href='dashboard-koordinator.html'"
                class="flex flex-col items-center gap-1 text-primary transition-transform active:scale-90">
                <span class="material-symbols-outlined" style="font-variation-settings: 'FILL' 1;">grid_view</span>
                <span class="text-[10px] font-bold">Dasbor</span>
            </button>
            <button class="flex flex-col items-center gap-1 text-slate-400 transition-transform active:scale-90">
                <span class="material-symbols-outlined">analytics</span>
                <span class="text-[10px] font-medium">Analisis</span>
            </button>
            <button onclick="window.location.href='pengaturan-akun-koordinator.html'"
                class="flex flex-col items-center gap-1 text-slate-400 transition-transform active:scale-90">
                <span class="material-symbols-outlined">person</span>
                <span class="text-[10px] font-medium">Profil</span>
            </button>
            <button onclick="logout()"
                class="flex flex-col items-center gap-1 text-slate-400 transition-transform active:scale-90 hover:text-red-500">
                <span class="material-symbols-outlined">logout</span>
                <span class="text-[10px] font-medium font-bold">Keluar</span>
            </button>
        </div>
    </nav>

    <!-- Supabase -->
    <script src="https://cdn.jsdelivr.net/npm/@supabase/supabase-js@2"></script>
    <script>
        const supabaseUrl = 'https://jnsqqswpkigyzewnbvaf.supabase.co';
        const supabaseKey = 'eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6Impuc3Fxc3dwa2lneXpld25idmFmIiwicm9sZSI6ImFub24iLCJpYXQiOjE3Njk2NjA3NDIsImV4cCI6MjA4NTIzNjc0Mn0.RrjPnddC55Xv9CLCtG8-1RyDmEkYg_04tHeKqRE7pok';
        const supabaseClient = supabase.createClient(supabaseUrl, supabaseKey);

        async function loadCoordinatorData() {
            try {
                const { data: { session } } = await supabaseClient.auth.getSession();

                if (!session || session.user.user_metadata.role !== 'koordinator') {
                    window.location.href = 'login.html';
                    return;
                }

                const userData = session.user.user_metadata;

                // Update UI
                document.getElementById('coordName').textContent = userData.full_name;
                document.getElementById('coordNip').textContent = userData.nip || '-';
                document.getElementById('coordSubject').textContent = userData.mapel || '-';

                // Render Kelas Pills
                const classContainer = document.getElementById('coordClass');
                classContainer.innerHTML = '';
                const classes = Array.isArray(userData.kelas) ? userData.kelas : (userData.kelas ? [userData.kelas] : []);

                if (classes.length > 0) {
                    classes.forEach(cls => {
                        const pill = document.createElement('span');
                        pill.className = 'px-3 py-1 bg-emerald-100 text-emerald-700 rounded-full text-[11px] font-bold border border-emerald-200';
                        pill.textContent = cls;
                        classContainer.appendChild(pill);
                    });
                } else {
                    classContainer.innerHTML = '<span class="text-gray-400 text-xs italic">Belum ada kelas</span>';
                }

                // Photo load
                if (userData.photo_url) {
                    document.getElementById('profilePhoto').style.backgroundImage = `url("${userData.photo_url}")`;
                } else {
                    const fallback = `https://ui-avatars.com/api/?name=${encodeURIComponent(userData.full_name)}&background=10b981&color=fff&size=256`;
                    document.getElementById('profilePhoto').style.backgroundImage = `url("${fallback}")`;
                }

            } catch (error) {
                console.error('Error loading data:', error);
            }
        }

        // Image Compression
        async function compressImage(file, maxWidth = 400, quality = 0.7) {
            return new Promise((resolve) => {
                const reader = new FileReader();
                reader.onload = function (e) {
                    const img = new Image();
                    img.onload = function () {
                        let width = img.width;
                        let height = img.height;
                        if (width > maxWidth) {
                            height = (height * maxWidth) / width;
                            width = maxWidth;
                        }
                        const canvas = document.createElement('canvas');
                        canvas.width = width;
                        canvas.height = height;
                        const ctx = canvas.getContext('2d');
                        ctx.drawImage(img, 0, 0, width, height);
                        canvas.toBlob((blob) => resolve(blob), 'image/jpeg', quality);
                    };
                    img.src = e.target.result;
                };
                reader.readAsDataURL(file);
            });
        }

        // Photo Upload Handler
        document.getElementById('photoInput').addEventListener('change', async function (e) {
            const file = e.target.files[0];
            if (!file) return;

            try {
                const { data: { session } } = await supabaseClient.auth.getSession();
                if (!session) return;

                const overlay = document.querySelector('.upload-overlay');
                overlay.innerHTML = '<span class="material-symbols-outlined text-white text-base animate-spin">sync</span>';
                overlay.style.opacity = '1';

                const compressedBlob = await compressImage(file);
                const fileName = `${session.user.id}_${Date.now()}.jpg`;
                const { error: uploadError } = await supabaseClient.storage
                    .from('profile-photos')
                    .upload(fileName, compressedBlob);

                if (uploadError) throw uploadError;

                const { data: { publicUrl } } = supabaseClient.storage.from('profile-photos').getPublicUrl(fileName);

                const { error: updateError } = await supabaseClient.auth.updateUser({
                    data: { photo_url: publicUrl }
                });

                if (updateError) throw updateError;

                document.getElementById('profilePhoto').style.backgroundImage = `url("${publicUrl}")`;
                alert('✅ Foto profil berhasil diperbarui!');

            } catch (error) {
                console.error('Error:', error);
                alert('❌ Gagal: ' + error.message);
            } finally {
                const overlay = document.querySelector('.upload-overlay');
                overlay.innerHTML = '<span class="material-symbols-outlined text-white text-base">photo_camera</span>';
                overlay.style.opacity = '';
            }
        });

        async function logout() {
            if (confirm('Yakin ingin keluar?')) {
                await supabaseClient.auth.signOut();
                localStorage.clear();
                window.location.href = 'login.html';
            }
        }

        window.addEventListener('load', loadCoordinatorData);
    </script>
</body>

</html>